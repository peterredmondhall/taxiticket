<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	 >
	<ui:style>
		.important {
			font-weight: bold;
		}

		.main-content
		{
			margin: 15px 15px 15px 15px;
			heightx: 84%;
			height: 500px; 	
		}

		.wizard {
			margin: 0 auto;
			width: 800px; 
			height: 500px; 	
		}


	</ui:style>
	<g:HTMLPanel ui:field="mainPanel" styleName="{style.wizard}">
		<g:FlowPanel ui:field="header" styleName="header" />
		<g:HTMLPanel styleName="progress-wrapper">
			<g:HTML ui:field="progressBar" styleName="progress-bar"/>
		</g:HTMLPanel>
		<g:HTMLPanel styleName="main">
			<g:HTMLPanel ui:field="steps" styleName="{style.main-content}" />
		<div class="footer">
			<g:Button ui:field="prev" text="Previous" styleName="btn btn-primary" />
			<g:Button ui:field="next" text="Next" styleName="btn btn-primary" />
		</div>
					</g:HTMLPanel>
		
	</g:HTMLPanel>
</ui:UiBinder> 